<div class="movie_box" game_id="<%=game.id%>">
  <div class="square-box" style="background-image: url(<%=game.image.url(:original)%>); background-repeat:no-repeat; background-size:cover; background-position:center;">
    <div align="center" class="square-content">
      <div class="star_div">
        <div class="star-rating" style="width:180px;" game_id="<%=game.id%>">
          <%0.upto(10).each do |i|%>
            <input class="rb<%=i%>" id="Ans_<%=i+1%>_<%=game.id%>" name="numericRating<%=game.id%>" type="radio" value="<%=i%>" />
          <%end%>
          <%0.upto(10).each do |i|%>
            <label for="Ans_<%=i+1%>_<%=game.id%>" class="star rb<%=i%>l" value="<%=i%>" onclick=""></label>
          <%end%>

          <%0.upto(10).each do |i|%>
            <label for="Ans_<%=i+1%>_<%=game.id%>" class="rb" onclick=""><%=i%></label>
          <%end%>
          <div class="rating"></div>
          <div class="rating-bg"></div> 
        </div>
      </div>
    </div>
  </div><br/>
  <a style="color:white;font-size:17px;"><%=game.name[0..12]%>
  <%if game.name.length>12%>
    ...
  <%end%>
</a>
</div>

